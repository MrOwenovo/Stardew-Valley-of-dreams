			"When":
			{
				"HasFile:{{FromFile}}": true,
				"FestivalOutfits": "True",
			},
			"Update": "OnLocationChange",
		},
		{
			"LogName": "Pierre - Beach",
			"Action": "EditImage",
			"Target": "Portraits/Pierre_Beach, Characters/Pierre_Beach",
			"FromFile": "assets/{{TargetPathOnly}}/Beach/{{TargetWithoutPath}}.png",
			"When":
			{
				"HasFile:{{FromFile}}": true,
			},
		},
		
// NOSE OVERLAY
