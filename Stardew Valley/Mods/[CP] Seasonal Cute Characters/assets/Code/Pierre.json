			"When":
			{
				"HasFile:{{FromFile}}": true,
			},
		},
		{
			"LogName": "Pierre - Winter Indoor/Outdoor",
			"Action": "EditImage",
			"Target": "Portraits/Pierre, Characters/Pierre",
			"FromFile": "assets/{{Target}}/{{TargetWithoutPath}}_{{season}}{{IndoorVariant}}.png",
			"When":
			{
